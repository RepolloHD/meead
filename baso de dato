version: '3.8'

services:
  db:
    image: postgres:15
    container_name: inventario_db
    restart: always
    environment:
      POSTGRES_DB: inventario
      POSTGRES_USER: admin
      POSTGRES_PASSWORD: admin123
    volumes:
      - inventario_data:/var/lib/postgresql/data
    ports:
      - "5432:5432"
    networks:
      - inventario_net

  adminer:
    image: adminer
    container_name: inventario_adminer
    restart: always
    ports:
      - "8080:8080"
    networks:
      - inventario_net

volumes:
  inventario_data:

networks:
  inventario_net:
